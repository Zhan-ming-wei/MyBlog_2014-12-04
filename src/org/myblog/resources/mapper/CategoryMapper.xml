<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace该是ICategoryDao的完整限定名 -->
<mapper namespace="org.myblog.dao.facade.ICategoryDao">

	<!--定义java bean的属性与数据库表的列之间的映射。type="CategoryVO"用到了configuration.xml中定义的别名 -->
	<resultMap id="categoryResultMap" type="CategoryVO">
	
		<!--id映射 -->
		<id property="id" column="id" />
		
		<!--普通属性映射 -->
		<result property="name" column="name" />
		<result property="desc" column="desc" />
		
	</resultMap>
	
	<!--与ICategoryDao接口中的getAllCategories方法对应，包括 方法名和参数类型。SQL语句中以“#{}”的形式引用参数 -->
	<select id="getAllCategories" parameterType="int" resultMap="categoryResultMap">
		SELECT *
		FROM category
	</select>
</mapper>